{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "**/*.ejs",
        "watchAssets": true
      },
      {
        "include": "email/assets/**/*",
        "watchAssets": true
      }
    ]
  }
}
